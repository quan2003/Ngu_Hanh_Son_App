  Future<void> _handleLogout(BuildContext context, WidgetRef ref) async {
    // Show confirmation dialog with animation
    final shouldLogout = await CustomAnimatedDialog.showConfirmation(
      context: context,
      title: 'X√°c nh·∫≠n ƒëƒÉng xu·∫•t',
      message: 'B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën ƒëƒÉng xu·∫•t kh·ªèi h·ªá th·ªëng?',
      confirmText: 'ƒêƒÉng xu·∫•t',
      cancelText: 'H·ªßy',
      confirmColor: Colors.red.shade600,
    );

    if (!shouldLogout || !context.mounted) return;

    try {
      final authService = ref.read(firebaseAuthServiceProvider);
      final userService = ref.read(userServiceProvider);

      // Clear user data
      await userService.clearUser();

      // Logout from Firebase
      await authService.logout();

      if (context.mounted) {
        // Show success message
        await CustomAnimatedDialog.showSuccess(
          context: context,
          title: 'ƒêƒÉng xu·∫•t th√†nh c√¥ng',
          message: 'H·∫πn g·∫∑p l·∫°i b·∫°n!',
        );

        // Navigate to login
        if (context.mounted) {
          context.go(AppConstants.loginRoute);
        }
      }
    } catch (e) {
      if (context.mounted) {
        await CustomAnimatedDialog.showError(
          context: context,
          title: 'L·ªói ƒëƒÉng xu·∫•t',
          message: 'Kh√¥ng th·ªÉ ƒëƒÉng xu·∫•t: $e',
        );
      }
    }
  }
