rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read images
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Feedback images
    match /feedback_images/{userId}/{imageId} {
      // Allow authenticated users to upload their own feedback images
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }
    
    // User profile images
    match /user_profiles/{userId}/{imageId} {
      // Allow users to upload/update their own profile images
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }
    
    // Admin-uploaded images (for news, announcements, etc.)
    match /admin_uploads/{allPaths=**} {
      // Only admins can upload
      allow write: if request.auth != null; // TODO: Add admin check
      allow read: if true;
    }
  }
}
